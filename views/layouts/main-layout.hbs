<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/assets/css/lib/bootstrap/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"
    />
       <link rel="stylesheet" href="/assets/css/site/main.css" />
    {{{_sections.styles}}}
    <title>{{page-title}}</title>
  </head>
  <body>

    <header>
      <nav
        class="navbar bg-dark border-bottom border-body navbar-expand-lg"
        data-bs-theme="dark"
      >
        <div class="container-fluid">
          <a class="navbar-brand" href="/dashboard">Assets App</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/dashboard">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/assets/index">Assets</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/assets-type/index">Assets type</a>
              </li>
                 <li class="nav-item">
                <a class="nav-link" href="/user/logout"> LogOut{{#if hasUser}}({{user.email}}){{/if}} </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="container mt-5">
         {{#if hasErrors}}
        <div
          class="alert alert-danger alert-dismissible fade show"
          role="alert"
        >
          <ul>
            {{#each errors}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="close"
          ></button>
        </div>
      {{/if}}

      {{#if hasSuccess}}
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
          <ul>
            {{#each success}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="close"
          ></button>
        </div>
      {{/if}}
      {{{body}}}
    </main>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
      integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/assets/js/lib/bootstrap/bootstrap.min.js"></script>    
    {{{_sections.scripts}}}
  </body>

</html>