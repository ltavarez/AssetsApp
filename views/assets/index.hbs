<div class="row">
  <h1 class="text-center">Assets list</h1>
</div>

<div class="row mt-2 mb-2">
  <div class="col-12 col-sm-4">
    <a href="/assets/create" class="btn btn-success"><i
        class="bi bi-bookmark-plus"
      ></i>
      New assets </a>
  </div>
</div>

{{#if hasAssets}}

  <div class="row">
    {{#each assetsList}}

      <div class="col-12 col-sm-3">
        <div class="card">
            <img
            src="{{this.logo}}"
            class="card-img-top img-size"
            alt="{{this.name}} logo"
          />
          <div class="card-body">
            <h5 class="card-title">{{this.name}} - {{this.symbol}} </h5>
            <p class="card-text">{{this.description}}</p>
              <p class="card-text"><span class="fw-bold">Assets Type: </span>{{this.assetTypeId.name}}</p>
            <div class="mt-2">
              <a href="/assets/edit/{{this._id}}" class="btn btn-primary float-end"><i
                  class="bi bi-pencil"
                ></i>
                Edit</a>
              <form method="post" action="/assets/delete" class="float-end me-2">
                <input type="hidden" value="{{this._id}}" name="AssetsId" />
                <button
                  type="submit"
                  class="btn btn-danger float-end me-2 delete-assets"
                ><i class="bi bi-trash3"></i> Delete</button>
              </form>

            </div>
          </div>
        </div>
      </div>

    {{/each}}
  </div>

{{else}}

  <div class="row d-flex justify-content-center">
    <div class="col-12 col-sm-4">
      <div class="alert alert-info" role="alert">
        <i class="bi bi-info-circle"></i>
        You have no assets registered.
      </div>
    </div>
  </div>

{{/if}}
{{#section "scripts"}}
  <script src="/assets/js/site/assets/index.js"></script>
{{/section}}