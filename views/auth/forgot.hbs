<div class="d-flex justify-content-center">

  <div class="col-12 col-md-4">
    <div class="card">
      <div class="card-header bg-success text-light"><h5 class="text-center"><i
            class="bi bi-person-exclamation"
          ></i>
          Forgot password</h5></div>
      <div class="card-body">
        <form action="/user/forgot" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input
              type="email"
              class="form-control"
              id="email"
              required="required"
              name="Email"
            />
          </div>

          <div>
            <button type="submit" class="btn btn-primary float-end"><i
                class="bi bi-send"
              ></i>
              Save</button>
            <a href="/" class="btn btn-warning float-end me-2"><i
                class="bi bi-arrow-left"
              ></i>
              Back to login</a>
          </div>
        </form>
      </div>
    </div>
  </div>

</div>